<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VendingSystemMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VendingSystemMobile"
    xmlns:pages="clr-namespace:VendingSystemMobile.Pages" 
    Title="VendingSystemMobile">
    <!-- 
        xmlns:pages="clr-namespace:VendingSystemMobile.Pages" ЭТО ПОДКЛЮЧЕНИЕ ПАПКИ!
    
        AppShell - это "главный контейнер" ПОСЛЕ успешного входа.
        Он управляет навигацией (нижними вкладками).
        Мы переходим на него со страницы LoginPage.
    -->

    <TabBar>
        <!-- Вот здесь мы используем "прозвище" pages:, и теперь XAML знает, где искать MainPage -->
        <ShellContent 
            Title="Главная" 
            Icon="home.png" 
            ContentTemplate="{DataTemplate pages:MainPage}" />

        <!-- Эти страницы мы еще не создали, поэтому временно их "выключаем" (комментируем) -->
        <!--
        <ShellContent Title="Мои отчеты" Icon="report.png" ContentTemplate="{DataTemplate pages:ReportsPage}" />
        <ShellContent Title="Профиль" Icon="user.png" ContentTemplate="{DataTemplate pages:ProfilePage}" />
        -->
    </TabBar>
    
    
</Shell>
