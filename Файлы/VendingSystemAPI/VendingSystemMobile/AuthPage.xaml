<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VendingSystemMobile.AuthPage"
             Title="Вход">
    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
        <!-- Логотип (0.1 балла) -->
        <Image Source="dotnet_bot.png" HeightRequest="100"/>

        <Entry x:Name="LoginEntry" Placeholder="Логин" Text="ivan"/>
        <Entry x:Name="PassEntry" Placeholder="Пароль" IsPassword="True" Text="ivan"/>

        <Button Text="ВОЙТИ" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>