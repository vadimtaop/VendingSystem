<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VendingSystemMobile.MainPage"
             Title="MainPage">
    <Grid RowDefinitions="Auto, *">

        <Label Grid.Row="0" Text="Список активных нарядов" FontSize="20" Padding="15"/>

        <!-- 
            ВОТ ЭТОТ ЭЛЕМЕНТ - САМЫЙ ГЛАВНЫЙ!
            Твой C# код ищет именно его по имени "TasksList".
        -->
        <CollectionView x:Name="TasksList"
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChanged="TasksList_SelectionChanged">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Padding="15" BorderColor="LightGray" CornerRadius="5">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Address}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Description}" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>
</ContentPage>